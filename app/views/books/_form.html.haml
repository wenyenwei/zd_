= form_for @book do |f|
  - if @book.errors.any?
    #error_explanation
      %h2= "#{pluralize(@book.errors.count, "error")} prohibited this book from being saved:"
      %ul
        - @book.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :num_of_boxes
    = f.number_field :num_of_boxes
  .field
    = f.label :destination_address
    = f.text_field :destination_address
  .field
    = f.label :pickup_address
    = f.text_field :pickup_address
  .field
    = f.label :departure_date
    = f.datetime_select :departure_date
  .field
    = f.label :arrival_date
    = f.datetime_select :arrival_date
  .field
    = f.label :message
    = f.text_field :message
  .field
    / # = f.label :user_email
    = f.hidden_field :user_email, value: current_user.email
  .actions
    = f.submit 'Save'
