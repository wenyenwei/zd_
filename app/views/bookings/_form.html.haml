= form_for @booking do |f|
  - if @booking.errors.any?
    #error_explanation
      %h2= "#{pluralize(@booking.errors.count, "error")} prohibited this booking from being saved:"
      %ul
        - @booking.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :num_of_boxes
    = f.number_field :num_of_boxes
  .field
    = f.label :destination_address
    = f.text_field :destination_address
  .field
    = f.label :pickup_address
    = f.text_field :pickup_address
  .field
    = f.label :departure_date
    = f.datetime_select :departure_date
  .field
    = f.label :arrival_date
    = f.datetime_select :arrival_date
  .field
    = f.label :message
    = f.text_field :message
  .field
    = f.label :user_email
    = f.text_field :user_email
  .actions
    = f.submit 'Save'
